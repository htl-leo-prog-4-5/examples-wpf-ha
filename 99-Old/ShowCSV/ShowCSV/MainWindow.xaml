<Window x:Class="ShowCSV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:vm="clr-namespace:ShowCSV"
 
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <vm:CSVDataContext />
    </Window.DataContext>
    <StackPanel>
        <StackPanel Orientation="Horizontal">

        <Button Content="First" Command="{Binding MoveFirstCommand}" />
        <Button Content="Prev" Command="{Binding MovePrevCommand}" Grid.Column="1" />
        <Label Content="{Binding Path=Position}" />
        <Button Content="Next" Command="{Binding MoveNextCommand}" Grid.Column="2" />
        <Button Content="Last" Command="{Binding MoveLastCommand}" Grid.Column="3" />        
   </StackPanel>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="30"></RowDefinition>
            <RowDefinition Height="Auto" MinHeight="30"></RowDefinition>
            <RowDefinition Height="Auto" MinHeight="30"></RowDefinition>
            <RowDefinition Height="Auto" MinHeight="30"></RowDefinition>
            <RowDefinition Height="Auto" MinHeight="30"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="100*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBox Text="{Binding Path=ProductCode, UpdateSourceTrigger=PropertyChanged }" Grid.Column="1" Grid.Row="1" />
        <TextBox Text="{Binding Path=Description, UpdateSourceTrigger=PropertyChanged }" Grid.Column="1" Grid.Row="2" />
        <TextBox Text="{Binding Path=Retail, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Grid.Row="3"/>
     </Grid>
    </StackPanel>


</Window>
