<Window x:Class="Survey.Wpf.Views.NewSurveyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:vm="clr-namespace:Survey.Wpf.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Survey.Wpf.Views"
        mc:Ignorable="d"
        Title="AnswerPollWindow" Height="300" Width="300">

    <Window.DataContext>
        <vm:NewSurveyViewModel />
    </Window.DataContext>

    <StackPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
<!-- LF3: 5.) -->
                <RowDefinition/>
<!-- LF3: ...... -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding NewSurvey.Name}" />
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding NewSurvey.PollEndTime}" />
<!-- LF3: 5.) -->
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding NewSurvey.Answer1}" />
<!-- LF3: ...... -->
            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding NewSurvey.Answer2}" />
            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding NewSurvey.Answer3}" />
            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding NewSurvey.Answer4}" />
            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding NewSurvey.Answer5}" />
            <Label Grid.Row="0" Grid.Column="0" Content="Frage" />
            <Label Grid.Row="1" Grid.Column="0" Content="Ende" />
            <Label Grid.Row="2" Grid.Column="0" Content="Antwort 1" />
            <Label Grid.Row="3" Grid.Column="0" Content="Antwort 2" />
            <Label Grid.Row="4" Grid.Column="0" Content="Antwort 3" />
            <Label Grid.Row="5" Grid.Column="0" Content="Antwort 4" />
            <Label Grid.Row="6" Grid.Column="0" Content="Antwort 5" />
        </Grid>
        <Button Command="{Binding SaveCommand}" Content="Save"  Margin="0,5,0,0"/>
    </StackPanel>
</Window>
