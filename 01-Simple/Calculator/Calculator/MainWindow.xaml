<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator" Height="188" Width="279">
    <Canvas Margin="0,0,2,-4">

        <Label x:Name="_result" Content="0" Margin="19,10,-10,0" Width="260" />
        <Button Content="1" Margin="19,41,0,0" Width="32" Click="_1_Click" />
        <Button Content="4" Margin="19,66,0,0" Width="32" Click="_4_Click" />
        <Button Content="7" Margin="19,91,0,0" Width="32" Click="_7_Click" />
        <Button Content="2" Margin="56,41,0,0" Width="32" Click="_2_Click" />
        <Button Content="5" Margin="56,66,0,0" Width="32" Click="_5_Click" />
        <Button Content="8" Margin="56,91,0,0" Width="32" Click="_8_Click" />
        <Button Content="3" Margin="93,41,0,0" Width="32" Click="_3_Click" />
        <Button Content="6" Margin="93,66,0,0" Width="32" Click="_6_Click" />
        <Button Content="9" Margin="93,91,0,0" Width="32" Click="_9_Click" />
        <Button Content="0" Margin="56,116,0,0" Width="32" Click="_0_Click" />
        <Button Content="+" Margin="160,41,0,0" Width="32" Click="_plus_Click" />
        <Button Content="-" Margin="160,66,0,0" Width="32" Click="_minus_Click" />
        <Button Content="*" Margin="160,91,0,0" Width="32" Click="_mul_Click" />
        <Button Content="/" Margin="160,116,0,0" Width="32" Click="_div_Click" />
        <Button Content="=" Margin="200,41,0,0" Width="32" Height="70" Click="_eq_Click" />
        <Button Content="C" Margin="200,116,0,0" Width="32" Click="_C_Click" />

    </Canvas>
</Window>