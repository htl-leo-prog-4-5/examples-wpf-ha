<Window x:Class="CalcWithBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalcWithBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <local:Calculator x:Key="ACalculator" 
                          Stack1="0"
                          Stack2="0"
                          Stack3="0"
                          Stack0="0"
                          />
    </Window.Resources>

    <StackPanel Orientation="Horizontal">
        <DockPanel DataContext="{StaticResource ACalculator}">
            <Label Content="{Binding Path=Stack0}" DockPanel.Dock="Top" />
            <Label Content="{Binding Path=Stack1}" DockPanel.Dock="Top" />
            <Label Content="{Binding Path=Stack2}" DockPanel.Dock="Top" />
            <Label Content="{Binding Path=Stack3}" DockPanel.Dock="Top" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                </Grid.RowDefinitions>
                <Button x:Name="_1" Content="1" Grid.Column="0" Grid.Row="0" Click="_1_Click"/>
                <Button x:Name="_4" Content="4" Grid.Column="0" Grid.Row="1" Click="_4_Click"/>
                <Button x:Name="_7" Content="7" Grid.Column="0" Grid.Row="2" Click="_7_Click"/>
                <Button x:Name="_2" Content="2" Grid.Column="1" Grid.Row="0" Click="_2_Click"/>
                <Button x:Name="_5" Content="5" Grid.Column="1" Grid.Row="1" Click="_5_Click"/>
                <Button x:Name="_8" Content="8" Grid.Column="1" Grid.Row="2" Click="_8_Click"/>
                <Button x:Name="_3" Content="3" Grid.Column="2" Grid.Row="0" Click="_3_Click"/>
                <Button x:Name="_6" Content="6" Grid.Column="3" Grid.Row="1" Click="_6_Click"/>
                <Button x:Name="_9" Content="9" Grid.Column="3" Grid.Row="2" Click="_9_Click"/>
                <Button x:Name="_0" Content="0" Grid.Column="1" Grid.Row="3" Click="_0_Click"/>

            </Grid>
        </DockPanel>
        <StackPanel Width="100" Margin="10,10,0,0">
            <Button Content="Enter" Margin="0,0,0,20" Click="Enter_Click"/>
            <Button Content="+" Click="Plus_Click" />
            <Button Content="-" Click="Minus_Click" />
            <Button Content="*" Click="Mul_Click" />
            <Button Content="/" Click="Div_Click" />
        </StackPanel>
    </StackPanel>
</Window>
