<Window x:Class="CalcGGT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalcGGT"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <local:GGT x:Key="AGGT" 
                          Zahl1="21" 
                          Zahl2="12" />
    </Window.Resources>

    <StackPanel  DataContext="{StaticResource AGGT}" >
        <StackPanel Orientation="Horizontal">
            <Label Content="Zahl 1" Width="100"/>
            <TextBox Width="50" Text="{Binding Path=Zahl1}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Zahl 2" Width="100"/>
            <TextBox Width="50" Text="{Binding Path=Zahl2}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="1,2,0,0">
            <Button Content="Berechnen" Click="Button_Click" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="1,2,0,0">
            <Label Content="GGT" Width="100"/>
            <TextBox x:Name="_result" Width="50" />
        </StackPanel>
    </StackPanel>
</Window>