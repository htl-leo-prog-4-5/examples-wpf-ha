<UserControl x:Name="_browser" x:Class="BrowserCustomControl.BrowserEditControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BrowserCustomControl"
             mc:Ignorable="d" d:DesignWidth="300" Height="20">
    <DockPanel>
        <Button Content="?" DockPanel.Dock="Right" Command="{Binding ElementName=_browser, Path=BrowseCommand}"/>
        <TextBox Text="{Binding ElementName=_browser, Path=MyContent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
    </DockPanel>
</UserControl>
