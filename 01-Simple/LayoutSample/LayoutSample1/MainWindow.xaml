<Window x:Class="LayoutSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LayoutSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Button x:Name="_stack" Content="StackPanel" Margin="0,10,0,0" Click="_stack_Click"/>
        <Button x:Name="_dock" Content="Dock" Margin="0,10,0,0" Click="_dock_Click"/>
        <Button x:Name="_grid" Content="Grid" Margin="0,10,0,0" Click="_grid_Click"/>
        <Button x:Name="_gridSplitter" Content="Grid Splitter" Margin="0,10,0,0" Click="_gridSplitter_Click"/>
    </StackPanel>
</Window>
