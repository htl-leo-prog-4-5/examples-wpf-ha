<Window x:Class="LayoutSample.CanvasWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LayoutSample"
        mc:Ignorable="d"
        Title="CanvasWindow" Height="160" Width="250">
    <Canvas>
        <TextBlock Canvas.Top="10" Canvas.Left="10" Text="Vorname"/>
        <TextBox Canvas.Top="30" Canvas.Left="10" Width="200"/>
        <TextBlock Canvas.Top="60" Canvas.Left="10" Text="Nachname"/>
        <TextBox Canvas.Top="80" Canvas.Left="10" Width="200"/>
    </Canvas>
</Window>
