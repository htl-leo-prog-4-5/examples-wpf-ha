<Window x:Class="LayoutSample.ScrollWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LayoutSample"
        mc:Ignorable="d"
        Title="ScrollWindow2" Height="200" Width="300">
    <UniformGrid Rows="2" Columns="2">
        <ScrollViewer HorizontalScrollBarVisibility="Visible">
            <Button Content="Button1" Width="150" Height="150"></Button>
        </ScrollViewer>
        <ScrollViewer HorizontalScrollBarVisibility="Visible">
            <Canvas Height="160" Width="250">
                <TextBlock Canvas.Top="10" Canvas.Left="10" Text="Vorname"/>
                <TextBox Canvas.Top="30" Canvas.Left="10" Width="200"/>
                <TextBlock Canvas.Top="60" Canvas.Left="10" Text="Nachname"/>
                <TextBox Canvas.Top="80" Canvas.Left="10" Width="200"/>
            </Canvas>
        </ScrollViewer>
        <ScrollViewer HorizontalScrollBarVisibility="Visible">
            <Button Content="Button2" Height="150"></Button>
        </ScrollViewer>
    </UniformGrid>
</Window>
