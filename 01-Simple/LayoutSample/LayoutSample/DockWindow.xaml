<Window x:Class="LayoutSample.DockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LayoutSample"
        mc:Ignorable="d"
        Title="DockWindow" Height="300" Width="300">
    <DockPanel>
        <Button Content="Top 1" DockPanel.Dock="Top"/>
        <Button Content="Button 1" DockPanel.Dock="Bottom"/>
        <Button Content="Button 2" DockPanel.Dock="Bottom"/>
        <Button Content="Left" DockPanel.Dock="Left"/>
        <Button Content="Right1 " DockPanel.Dock="Right"/>
        <Button Content="Top 2" DockPanel.Dock="Top"/>
        <Button Content="Right 2" DockPanel.Dock="Right"/>
        <Button Content="Center"/>
    </DockPanel>
</Window>
