        <Button Grid.Row="5" Grid.Column="4" FontSize="50" Content="{Binding Field54}"
                Command="{Binding SetField54Command}" Margin="1,1,1,1" />
        <Button Grid.Row="5" Grid.Column="5" FontSize="50" Content="{Binding Field55}"
                Command="{Binding SetField55Command}" Margin="1,1,1,1" />

        <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3">
            <StackPanel Orientation="Horizontal">
                <Label>Züge:</Label>
                <Label Content="{Binding MoveCount}" />
            </StackPanel>
            <Button Content="New Game" Command="{Binding NewGameCommand}" Margin="1,1,1,1" />
        </StackPanel>
    </Grid>
</Window>