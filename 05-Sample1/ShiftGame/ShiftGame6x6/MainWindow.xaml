        <Button Grid.Row="3" Grid.Column="5" FontSize="50" Content="{Binding Field35}"
                Command="{Binding SetField35Command}" Margin="1,1,1,1" />

        <Button Grid.Row="4" Grid.Column="0" FontSize="50" Content="{Binding Field40}"
                Command="{Binding SetField40Command}" Margin="1,1,1,1" />
        <Button Grid.Row="4" Grid.Column="1" FontSize="50" Content="{Binding Field41}"
                Command="{Binding SetField41Command}" Margin="1,1,1,1" />
        <Button Grid.Row="4" Grid.Column="2" FontSize="50" Content="{Binding Field42}"
                Command="{Binding SetField42Command}" Margin="1,1,1,1" />
        <Button Grid.Row="4" Grid.Column="3" FontSize="50" Content="{Binding Field43}"
                Command="{Binding SetField43Command}" Margin="1,1,1,1" />
        <Button Grid.Row="4" Grid.Column="4" FontSize="50" Content="{Binding Field44}"
                Command="{Binding SetField44Command}" Margin="1,1,1,1" />
