<Window x:Class="CoffeeMachine.Views.SetupView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoffeeMachine"
        xmlns:viewModels="clr-namespace:CoffeeMachine.ViewModels"        
        mc:Ignorable="d"
        Title="MainWindow" Height="271.782" Width="538.071">

    <Window.DataContext>
        <viewModels:SetupViewModel />
    </Window.DataContext>
    <StackPanel >
        <Label Content="Setup coffee machine" FontSize="30"></Label>
        <Separator Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal">
            <Label Content="Filename" Width="100"></Label>
            <TextBox Text="{Binding Filename}" Width="400"></TextBox>
            <Button Content="?" Command="{Binding BrowseFileCommand}"></Button>
        </StackPanel>

        <StackPanel Orientation="Horizontal"/>
        <Separator Margin="0,10,0,10"/>
        <StackPanel Orientation="Horizontal">
            <Button Content="Get current"  Command="{Binding GetCurrentCoinsCommand}" Width="100" Margin="0,0,10,0"/>
            <Button Content="Read from file"  Command="{Binding ReadFromFileCommand}" Width="100" Margin="0,0,10,0"/>
            <Button Content="Write to file"  Command="{Binding WriteToFileCommand}" Width="100" Margin="0,0,10,0"/>
            <Button Content="Close" Command="{Binding CloseCommand}" Width="100" Margin="50,0,0,0"/>
        </StackPanel>
        <Separator Margin="0,10,0,10"/>
        <StackPanel Orientation="Horizontal">
            <Label Content="Coin Value" Width="100"/>
            <TextBox Text="{Binding Model.Coin1Value}" Width="40" IsReadOnly="True" Margin="0,0,5,0"/>
            <TextBox Text="{Binding Model.Coin2Value}" Width="40" IsReadOnly="True" Margin="0,0,5,0"/>
            <TextBox Text="{Binding Model.Coin3Value}" Width="40" IsReadOnly="True" Margin="0,0,5,0"/>
            <TextBox Text="{Binding Model.Coin4Value}" Width="40" IsReadOnly="True" Margin="0,0,5,0"/>
            <TextBox Text="{Binding Model.Coin5Value}" Width="40" IsReadOnly="True" Margin="0,0,5,0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Coin Amount" Width="100"/>
            <TextBox Text="{Binding Model.Coin1Amount}" Width="40" Margin="0,0,5,0"/>
            <TextBox Text="{Binding Model.Coin2Amount}" Width="40" Margin="0,0,5,0"/>
            <TextBox Text="{Binding Model.Coin3Amount}" Width="40" Margin="0,0,5,0"/>
            <TextBox Text="{Binding Model.Coin4Amount}" Width="40" Margin="0,0,5,0"/>
            <TextBox Text="{Binding Model.Coin5Amount}" Width="40" Margin="0,0,5,0"/>
        </StackPanel>
    </StackPanel>
</Window>
