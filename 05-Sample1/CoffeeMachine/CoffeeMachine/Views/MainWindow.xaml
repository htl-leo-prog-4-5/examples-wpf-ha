<Window x:Class="CoffeeMachine.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoffeeMachine"
        xmlns:viewModels="clr-namespace:CoffeeMachine.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <viewModels:MainWindowViewModel />
    </Window.DataContext>
    <StackPanel>
        <Button Content="Setup" Command="{Binding SetupCommand}" />
        <Button Content="Sell" Command="{Binding SellCommand}" />
    </StackPanel>
</Window>