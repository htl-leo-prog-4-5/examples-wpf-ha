<Window x:Class="FirstBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Label Content="OneWay Binding" />
        <StackPanel Orientation="Horizontal">
            <Label Content="Choose color:" MinWidth="100" />
            <ComboBox Name="colorPickerCB" MinWidth="100">
                <ComboBoxItem>Red</ComboBoxItem>
                <ComboBoxItem>Green</ComboBoxItem>
                <ComboBoxItem>Blue</ComboBoxItem>
            </ComboBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Selected color:" MinWidth="100" />
            <TextBox Background="{Binding ElementName=colorPickerCB, Path=Text, Mode=OneWay}" MinWidth="100"> </TextBox>
        </StackPanel>

        <Label Content="TwoWay Binding with UpdateSourceTrigger" />
        <StackPanel Orientation="Horizontal">
            <TextBox Name="edit01"
                     Text="{Binding ElementName=edit02, Path=Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     MinWidth="100" Margin="10,0,10,0">
            </TextBox>
            <TextBox Name="edit02" MinWidth="100" Margin="10,0,10,0"></TextBox>
        </StackPanel>

        <Label Content="TwoWay Binding with different UpdateSourceTrigger" />
        <StackPanel Orientation="Horizontal">
            <TextBox Name="edit11"
                     Text="{Binding ElementName=edit12, Path=Text, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                     MinWidth="100" Margin="10,0,10,0">
            </TextBox>
            <TextBox Name="edit12" MinWidth="100" Margin="10,0,10,0"></TextBox>
        </StackPanel>

    </StackPanel>
</Window>