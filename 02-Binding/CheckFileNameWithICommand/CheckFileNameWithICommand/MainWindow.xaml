<Window x:Class="CheckFileNameWithICommand.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckFileNameWithICommand"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <local:FileName x:Key="AFileName" 
                          FilePath="c:\tmp\test.txt"
                          />
    </Window.Resources>

    <StackPanel DataContext="{StaticResource AFileName}" >
        <TextBox Text="{Binding FilePath, UpdateSourceTrigger=PropertyChanged }"> </TextBox>
        <Button Content="Press if exist" Command="{Binding DoSomethingWithFile}" />
        <Button Content="Press with param" Command="{Binding DoSomethingWithFileWithParam}" CommandParameter="1" />
        <Button Content="Press with param(2)" Command="{Binding DoSomethingWithFileWithParam2}" CommandParameter="1" />
    </StackPanel>
</Window>
