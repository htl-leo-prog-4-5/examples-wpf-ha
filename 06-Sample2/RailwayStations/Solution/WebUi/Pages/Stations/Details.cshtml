@page
@model WebUi.Pages.Stations.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Station</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Station.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Station.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Station.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Station.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Station.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Station.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Station.StateCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Station.StateCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Station.IsRegional)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Station.IsRegional)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Station.IsExpress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Station.IsExpress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Station.IsIntercity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Station.IsIntercity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Station.Remark)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Station.Remark)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Station.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Station.City!.Name)
        </dd>
    </dl>

    <h5>Lines</h5>
    <table class="table">
        <tbody>
        @foreach (var item in Model.Station.Lines!)
        {
            <tr>
                <td>@item.Name</td>
            </tr>
        }
        <tbody>
    </table >

    <h5>Railway Companies</h5>
    <table class="table">
        <tbody>
        @foreach (var item in Model.Station.RailwayCompanies!)
        {
            <tr>
                <td>@item.Name</td>
            </tr>
        }
        <tbody>
    </table>

    <h5>Infrastructure Companies</h5>
    <table class="table">
        <tbody>
        @foreach (var item in Model.Station.Infrastructures!)
        {
            <tr>
                <td>@item.Name</td>
            </tr>
        }
        <tbody>
    </table>

</div >

<div >
    <a asp-page="./Edit" asp-route-id="@Model.Station.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>