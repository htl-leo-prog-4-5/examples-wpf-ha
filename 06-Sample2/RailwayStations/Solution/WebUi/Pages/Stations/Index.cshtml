@page
@model WebUi.Pages.Stations.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Station[0].Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Station[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Station[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Station[0].Lines)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Station) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City!.Name)
            </td>
            <td>
                @string.Join(',', item.Lines!.Select(l => l.Name))
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
