<Window x:Class="WpfTadeotAdmin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTadeotAdmin"
        mc:Ignorable="d"
        Title="Tadeot Admin Panel" Height="600" Width="1100" Loaded="Window_Loaded">

    <Window.Resources>

        <Style x:Key="GridColumn" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"></Setter>
            <Setter Property="Padding" Value="5"></Setter>
        </Style>
        <Style x:Key="NumberColumn" TargetType="TextBlock" BasedOn="{StaticResource GridColumn}">
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        </Style>
        <Style x:Key="TextColumn" TargetType="TextBlock" BasedOn="{StaticResource GridColumn}">
            <Setter Property="HorizontalAlignment" Value="Left"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
        </Style>
        <Style x:Key="CheckboxColumn" TargetType="CheckBox">
            <Setter Property="Padding" Value="5"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <UniformGrid Grid.Row="0" Columns="2" HorizontalAlignment="Stretch" Margin="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Image Source="/img/htllogo_2022_black.png" Width="200" Stretch="Uniform"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <TextBlock Style="{StaticResource Header}">Tadeot Administration</TextBlock>
            </StackPanel>
        </UniformGrid>

        <TextBlock Grid.Row="1" Margin="10" FontSize="24" Text="{Binding Path=VisitorsCount, StringFormat='Besucherregistrierungen: {0}'}"></TextBlock>
        <DataGrid Margin="10" Grid.Row="2" ItemsSource="{Binding Visitors}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Id}" Header="Id" 
                                    ElementStyle="{StaticResource NumberColumn}">
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=DateTime, StringFormat={}{0:dd.MM hh:mm}}" Header="Zeit" 
                                    ElementStyle="{StaticResource NumberColumn}">
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=Adults}" Header="Begl." 
                                    ElementStyle="{StaticResource NumberColumn}">
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=SchoolType}" Header="Schultyp" 
                                    ElementStyle="{StaticResource TextColumn}">
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=SchoolLevel}" Header="Schulstufe" 
                                    ElementStyle="{StaticResource TextColumn}">
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=ReasonForVisit}" Header="Besuchsgrund" 
                                    ElementStyle="{StaticResource TextColumn}">
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=Gender}" Header="Geschlecht" 
                                    ElementStyle="{StaticResource TextColumn}">
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=City.District.Name}" Header="Bezirk" 
                                    ElementStyle="{StaticResource TextColumn}">
                </DataGridTextColumn>
                <DataGridCheckBoxColumn Binding="{Binding Path=InterestHIF}" Header="Int. HIF"
                                    ElementStyle="{StaticResource CheckboxColumn}">
                </DataGridCheckBoxColumn>
                <DataGridCheckBoxColumn Binding="{Binding Path=InterestHITM}" Header="Int. HITM"
                                    ElementStyle="{StaticResource CheckboxColumn}">
                </DataGridCheckBoxColumn>
                <DataGridCheckBoxColumn Binding="{Binding Path=InterestHEL}" Header="Int. HEL"
                                    ElementStyle="{StaticResource CheckboxColumn}">
                </DataGridCheckBoxColumn>
                <DataGridCheckBoxColumn Binding="{Binding Path=InterestHBG}" Header="Int. HBG"
                                    ElementStyle="{StaticResource CheckboxColumn}">
                </DataGridCheckBoxColumn>
                <DataGridCheckBoxColumn Binding="{Binding Path=InterestFEL}" Header="Int. FEL"
                                    ElementStyle="{StaticResource CheckboxColumn}">
                </DataGridCheckBoxColumn>
                <DataGridTextColumn Binding="{Binding Path=Comment}" Header="Kommentar"
                                    ElementStyle="{StaticResource TextColumn}">
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <UniformGrid Grid.Row="3" Columns="4">
            <Button Command="{Binding DownloadCSV}" Style="{StaticResource ActionButton}">Download CSV-Datei</Button>
            <Button Command="{Binding DeleteVisitors}" Style="{StaticResource DeleteButton}">Alle Registrierungen Löschen</Button>
            <Button Command="{Binding GenerateDemoVisitors}" Style="{StaticResource ActionButton}">Demo-Registrierungen Generieren</Button>
            <Button Command="{Binding RegistrationConfig}" Style="{StaticResource ActionButton}">Auswahllisten konfigurieren</Button>
        </UniformGrid>


    </Grid>
</Window>
