<Window x:Class="WinUIWpf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:WinUIWpf.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
        Height="500"
        Width="450"
        Title="Schulspinde"
        mc:Ignorable="d"
        Loaded="Window_Loaded">
    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="HeaderTitleText">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
        <Style x:Key="GridColumn" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"></Setter>
            <Setter Property="Padding" Value="5"></Setter>
        </Style>
        <Style x:Key="NumberColumn" TargetType="TextBlock" BasedOn="{StaticResource GridColumn}">
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        </Style>
        <Style x:Key="TextColumn" TargetType="TextBlock" BasedOn="{StaticResource GridColumn}">
            <Setter Property="HorizontalAlignment" Value="Left"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
        </Style>
        <Style x:Key="CheckboxColumn" TargetType="CheckBox">
            <Setter Property="Padding" Value="5"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="10"></Setter>
            <Setter Property="BorderBrush" Value="Green"></Setter>
        </Style>
    </Window.Resources>

    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Style="{StaticResource HeaderTitleText}">Spindverwaltung</TextBlock>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="100" Command="{Binding Path=ShowBookingCommand}">Buchungen</Button>
            <Button Width="100" Command="{Binding Path=AddSchoolLockerCommand}">Hinzufügen</Button>
        </StackPanel>
        <DataGrid Grid.Row="1"
                  Margin="10"
                  SelectedItem="{Binding SelectedLocker}"
                  ItemsSource="{Binding SchoolLockers}"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  AutoGenerateColumns="False"
                  VerticalAlignment="Stretch"
                  HorizontalContentAlignment="Stretch"
                  SelectionMode="Single"
                  Validation.ErrorTemplate="{x:Null}"
                  Height="auto">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Number}" Header="Spind-Nummer"
                                    Width="120" ElementStyle="{StaticResource NumberColumn}">
                </DataGridTextColumn>
                <DataGridCheckBoxColumn Binding="{Binding Path=IsTodayFree,Mode=OneWay}" Header="Derzeit Frei"
                                        Width="80" IsReadOnly="true" ElementStyle="{StaticResource CheckboxColumn}">
                </DataGridCheckBoxColumn>
                <DataGridTextColumn Binding="{Binding Path=CountBookings}" Header="Anzahl Buchungen"
                                    Width="120" ElementStyle="{StaticResource NumberColumn}">
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>