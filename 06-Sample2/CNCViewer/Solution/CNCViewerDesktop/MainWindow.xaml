<Window x:Class="CNCViewerDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CNCViewerDesktop" 
        xmlns:viewmodels="clr-namespace:CNCViewerDesktop.ViewModels" 
        xmlns:Controls="clr-namespace:CNCViewerDesktop.Controls" 
        d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        mc:Ignorable="d"
        Title="CNC Viewer" Height="450" Width="600">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>

            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{Binding GCodeFile}" FontSize="24" HorizontalAlignment="Center"/>
        <Border Grid.Row="1" BorderBrush="LightGray" Margin="5" BorderThickness="1" Padding="10">
            <Controls:DrawingControl Pattern="{Binding GCodePattern}"/>
        </Border>
        <StackPanel Grid.Row="2" Margin="5" Orientation="Horizontal">
            <Button Command="{Binding ImportGcodeCommand}" FontSize="16" Padding="5" Margin="5">Load gcode file...</Button>
        </StackPanel>
    </Grid>
</Window>
