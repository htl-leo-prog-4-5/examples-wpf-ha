<Window x:Class="Wpf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf"
        xmlns:viewModels="clr-namespace:Wpf.ViewModels;assembly=Wpf.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewModels:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="Hiking Logbook" Height="460" Width="620">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Filterbereich -->
        <StackPanel Margin="10" Grid.Row="0" Orientation="Horizontal">
            <Label Content="Companion:" />
            <ComboBox Width="150" Margin="5" ItemsSource="{Binding Companions}" DisplayMemberPath="Name"
                      SelectedValue="{Binding SelectedCompanion}" />

            <Button Content="Filter" Width="60" Margin="10,0,0,0" Command="{Binding FilterCommand}" />
        </StackPanel>

        <ListView Grid.Row="1" Margin="10"
                  ItemsSource="{Binding FilteredHikes}" SelectedItem="{Binding SelectedHike}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Date}" />
                    <GridViewColumn Header="Trail" DisplayMemberBinding="{Binding Trail}" />
                    <GridViewColumn Header="Difficulty" DisplayMemberBinding="{Binding Difficulty}" />
                    <GridViewColumn Header="Highlights" DisplayMemberBinding="{Binding Highlights}" />
                    <GridViewColumn Header="Companions" DisplayMemberBinding="{Binding Companions}" />
                </GridView>
            </ListView.View>
        </ListView>
        <UniformGrid Grid.Row="2" Columns="2" Margin="10">

            <Label Content="Location:" />
            <TextBox Text="{Binding Location, UpdateSourceTrigger=PropertyChanged}"
                     IsReadOnly="{Binding IsNotEditMode}" />

            <Label Content="Duration:" />
            <TextBox Text="{Binding Duration, UpdateSourceTrigger=PropertyChanged}"
                     IsReadOnly="{Binding IsNotEditMode}" />

            <Label Content="Distance:" />
            <TextBox Text="{Binding Distance, UpdateSourceTrigger=PropertyChanged}"
                     IsReadOnly="{Binding IsNotEditMode}" />

        </UniformGrid>

        <UniformGrid Grid.Row="3" Columns="4" Margin="5">
            <Button Content="Details" Margin="5" Command="{Binding DetailCommand}" />
            <Button Content="Edit" Margin="5" Command="{Binding EditCommand}" />
            <Button Content="Update" Margin="5" Command="{Binding UpdateCommand}" />
        </UniformGrid>
    </Grid>
</Window>