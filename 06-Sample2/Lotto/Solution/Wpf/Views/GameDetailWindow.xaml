<Window x:Class="Wpf.Views.GameDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf"
        xmlns:viewModels="clr-namespace:Wpf.ViewModels;assembly=Wpf.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewModels:GameDetailViewModel}"
        mc:Ignorable="d"
        Title="Lotto" Height="360" Width="620">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Margin="10,10,10,10" Grid.Row="0" Orientation="Horizontal" Grid.ColumnSpan="2">
            <Label Content="Lotto Game Detail:" />
        </StackPanel>

        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Content="From:" />
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Game.DateFrom,StringFormat={}{0:yyyy.MM.dd}}" IsReadOnly="True" />

            <Label Grid.Row="1" Grid.Column="0" Content="To:" />
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Game.DateTo,StringFormat={}{0:yyyy.MM.dd}}" IsReadOnly="True" />

            <Label Grid.Row="2" Grid.Column="0" Content="Expected Draw:" />
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Game.DrawDate,StringFormat={}{0:yyyy.MM.dd}}" IsReadOnly="True" />

            <Label Grid.Row="3" Grid.Column="0" Content="Numbers:" />
            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
                <TextBox Width="25" Margin="5" Text="{Binding Game.No1 }" IsReadOnly="True"/>
                <TextBox Width="25" Margin="5" Text="{Binding Game.No2 }" IsReadOnly="True"/>
                <TextBox Width="25" Margin="5" Text="{Binding Game.No3 }" IsReadOnly="True"/>
                <TextBox Width="25" Margin="5" Text="{Binding Game.No4 }" IsReadOnly="True"/>
                <TextBox Width="25" Margin="5" Text="{Binding Game.No5 }" IsReadOnly="True"/>
                <TextBox Width="25" Margin="5" Text="{Binding Game.No6 }" IsReadOnly="True"/>
                <Label Width="30" Content="ZZ" />
                <TextBox Width="25" Margin="5" Text="{Binding Game.NoX }" IsReadOnly="True"/>
            </StackPanel>

        </Grid>

        <UniformGrid Grid.Row="1" Columns="4" Grid.ColumnSpan="2" Margin="0,258,0,0" Grid.RowSpan="2">
            <Button Content="Close" Margin="10" Command="{Binding CloseCommand}" />
        </UniformGrid>
    </Grid>
</Window>