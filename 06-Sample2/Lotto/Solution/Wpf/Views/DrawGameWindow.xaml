<Window x:Class="Wpf.Views.DrawGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf"
        xmlns:viewModels="clr-namespace:Wpf.ViewModels;assembly=Wpf.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewModels:DrawGameViewModel}"
        mc:Ignorable="d"
        Title="Lotto" Height="194" Width="396">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Margin="10" Grid.Row="0" Orientation="Horizontal">
            <Label Content="Draw Lotto Game" />
        </StackPanel>

        <StackPanel Margin="10" Grid.Row="1" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label Width="75" Content="Numbers:" />
                <TextBox Width="25" Margin="5" Text="{Binding No1 , UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                <TextBox Width="25" Margin="5" Text="{Binding No2 , UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                <TextBox Width="25" Margin="5" Text="{Binding No3 , UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                <TextBox Width="25" Margin="5" Text="{Binding No4 , UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                <TextBox Width="25" Margin="5" Text="{Binding No5 , UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                <TextBox Width="25" Margin="5" Text="{Binding No6 , UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                <Label Width="30" Content="ZZ" />
                <TextBox Width="25" Margin="5" Text="{Binding NoZZ , UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
            </StackPanel>
        </StackPanel>

        <UniformGrid Grid.Row="2" Columns="4">
            <Button Content="Draw" Margin="10" Command="{Binding DrawCommand}" />
            <Button Content="Close" Margin="10" Command="{Binding CloseCommand}" />
        </UniformGrid>
    </Grid>
</Window>