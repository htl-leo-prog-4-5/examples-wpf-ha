<Window x:Class="Wpf.Views.ExaminationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf"
        xmlns:viewModels="clr-namespace:Wpf.ViewModels;assembly=Wpf.ViewModels"
        xmlns:controls="clr-namespace:Wpf.Controls"
        d:DataContext="{d:DesignInstance Type=viewModels:ExaminationViewModel}"
        mc:Ignorable="d"
        Title="Patient Examinations" Height="500" Width="900">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <controls:ExaminationPreviewControl Grid.Row="2" Margin="10,0,10,10" BorderThickness="1" BorderBrush="Black"
                                            DataStreams="{Binding SelectedExamination.DataStreams}">
        </controls:ExaminationPreviewControl>

    </Grid>
</Window>