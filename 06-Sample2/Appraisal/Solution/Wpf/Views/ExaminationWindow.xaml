<Window x:Class="Wpf.Views.ExaminationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf"
        xmlns:viewModels="clr-namespace:Wpf.ViewModels;assembly=Wpf.ViewModels"
        xmlns:controls="clr-namespace:Wpf.Controls"
        d:DataContext="{d:DesignInstance Type=viewModels:ExaminationViewModel}"
        mc:Ignorable="d"
        Title="Patient Examinations" Height="500" Width="900">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10,10,10,10">
            <UniformGrid Columns="2">
                <Label Content="SV Number:" />
                <TextBlock Text="{Binding Patient.SVNumber}" />

                <Label Content="First name:" />
                <TextBlock Text="{Binding Patient.FirstName}" />

                <Label Content="Last name:" />
                <TextBlock Text="{Binding Patient.LastName}" />
            </UniformGrid>
        </StackPanel>
        <ListView Grid.Row="1" Margin="10,10,10,10"
                  ItemsSource="{Binding Examinations}" SelectedItem="{Binding SelectedExamination}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Date" DisplayMemberBinding="{Binding ExaminationDate}" />
                </GridView>
            </ListView.View>
        </ListView>

        <controls:ExaminationPreviewControl Grid.Row="2" Margin="10,0,10,10" BorderThickness="1" BorderBrush="Black"
                                            DataStreams="{Binding SelectedExamination.DataStreams}">
        </controls:ExaminationPreviewControl>

        <UniformGrid Grid.Row="3" Columns="4" Margin="5">
            <Button Content="Close" Margin="5" Command="{Binding CloseCommand}" />
        </UniformGrid>
    </Grid>
</Window>