<Window x:Class="Wpf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf"
        xmlns:viewModels="clr-namespace:Wpf.ViewModels;assembly=Wpf.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewModels:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="Appraisal" Height="460" Width="620">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Margin="10,10,10,10" Grid.Row="0" Orientation="Horizontal">
            <Label Content="" />
            <CheckBox Margin="5" Content="Patients with missing name only" IsChecked="{Binding IsMissingNames}" />

            <Button Content="Filter" Width="60" Margin="10,0,0,0" Command="{Binding FilterCommand}" />
        </StackPanel>

        <ListView Grid.Row="1" Margin="10,10,10,10"
                  ItemsSource="{Binding FilteredPatients}" SelectedItem="{Binding SelectedPatient}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="SVNumber" DisplayMemberBinding="{Binding SvNumber}" />
                    <GridViewColumn Header="First Name" Width="130" DisplayMemberBinding="{Binding FirstName}" />
                    <GridViewColumn Header="Last Name" Width="130" DisplayMemberBinding="{Binding LastName}" />
                    <GridViewColumn Header="Examination Count" DisplayMemberBinding="{Binding ExaminationCount}" />
                    <GridViewColumn Header="Last Examination" DisplayMemberBinding="{Binding LastExamination}" />
                </GridView>
            </ListView.View>
        </ListView>

        <UniformGrid Grid.Row="2" Columns="2" Margin="5,10,0,10">

            <Label Content="First name:" Width="200" />
            <TextBox Margin="5" Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"
                     IsReadOnly="{Binding IsNotEditMode}" />

            <Label Content="Last name:" Width="200" />
            <TextBox Margin="5" Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"
                     IsReadOnly="{Binding IsNotEditMode}" />

        </UniformGrid>

        <UniformGrid Grid.Row="3" Columns="4" Margin="5">
            <Button Content="Examinations" Margin="5" Command="{Binding ExaminationsCommand}" />
            <Button Content="Edit" Margin="5" Command="{Binding EditCommand}" />
            <Button Content="Update" Margin="5" Command="{Binding UpdateCommand}" />
            <Button Content="Import" Margin="5" Command="{Binding ImportCommand}" />
        </UniformGrid>
    </Grid>
</Window>