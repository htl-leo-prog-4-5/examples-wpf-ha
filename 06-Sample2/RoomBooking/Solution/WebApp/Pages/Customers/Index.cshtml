@page
@model WebApp.Pages.Customers.IndexModel

@{
    ViewData["Title"] = "Gäste";
}

<h1>Kundenübersicht</h1>

<div>
    <form method="post" class="form-inline">
            <label class="control-label" style="margin:5px;">Filter Name: </label>
            <input asp-for="FilterName" style="margin:5px;"/>
            <label class="control-label" style="margin:5px;">Nur mit aktuellen Buchungen: </label>
            <input type="checkbox" asp-for="OnlyWithCurrentBookings" style="margin:5px;"/>
            <input type="submit" value="Aktualisieren" class="btn btn-primary" style="margin:5px;"/>
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Nachname
            </th>
            <th>
                Vorname
            </th>
            <th>
                Anzahl Buchungen
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Customers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @if (item.CountOpenBookings > 0)
                    {
                        @item.CountOpenBookings
                    }
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Bearbeiten</a>
                </td>
            </tr>
        }
    </tbody>
</table>
