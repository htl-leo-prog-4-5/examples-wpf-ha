<Window x:Class="WpfApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        Height="600"
        Width="500"
        MinHeight="300"
        MinWidth="450"
        Title="Zimmerbelegungen"
        mc:Ignorable="d"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Label Content="Suche Zimmernummer: " Margin="5" />
            <TextBox Text="{Binding SearchRoom, UpdateSourceTrigger=PropertyChanged}" Margin="5" Width="50"
                     VerticalContentAlignment="Center">
            </TextBox>
            <Label Content="Zimmertyp: " Margin="5" />
            <ComboBox x:Name="ComboBoxRooms" ItemsSource="{Binding RoomTypes}"
                      Margin="5,5, 5, 5"
                      Width="120"
                      DisplayMemberPath="Description"
                      SelectedItem="{Binding SelectedRoomType}">
            </ComboBox>
        </StackPanel>
        <DataGrid Grid.Row="1"
                  Margin="10"
                  SelectedItem="{Binding SelectedRoom}"
                  ItemsSource="{Binding Rooms}"
                  IsReadOnly="True"
                  AutoGenerateColumns="False"
                  HorizontalAlignment="Left"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Auto"
                  VerticalAlignment="Stretch"
                  HorizontalContentAlignment="Stretch"
                  SelectionMode="Single"
                  Validation.ErrorTemplate="{x:Null}"
                  Height="450">
            <DataGrid.Columns>

                <DataGridTextColumn Binding="{Binding Path=RoomNumber}" Header="Zimmer-Nr." Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Margin" Value="10,5,10,5" />
                            <Setter Property="HorizontalAlignment" Value="Left" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=RoomType}" Header="Zimmertyp" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Margin" Value="10,5,10,5" />
                            <Setter Property="HorizontalAlignment" Value="Left" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridCheckBoxColumn
                    Binding="{Binding Path=CurrentlyAvailable,Mode=OneWay}"
                    IsReadOnly="true"
                    Header="Frei"
                    Width="80">
                    <DataGridCheckBoxColumn.ElementStyle>
                        <Style TargetType="CheckBox">
                            <Setter Property="Margin" Value="10,5,10,5" />
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="FrameworkElement.IsHitTestVisible" Value="False" />
                        </Style>
                    </DataGridCheckBoxColumn.ElementStyle>
                </DataGridCheckBoxColumn>
                <DataGridTextColumn Binding="{Binding Path=CurrentBooking.From, StringFormat='{}{0:dd.MM.yyyy}'}"
                                    Header="Belegt seit" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Margin" Value="10,5,10,5" />
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=CurrentBooking.To, StringFormat='{}{0:dd.MM.yyyy}'}"
                                    Header="Bis" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Margin" Value="10,5,10,5" />
                            <Setter Property="HorizontalAlignment" Value="Left" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <UniformGrid Rows="1" Columns="2" Grid.Row="2" Margin="10">
            <Button
                Padding="5"
                Content="Anreise"
                Command="{Binding CommandCheckin}" Width="Auto" HorizontalAlignment="Stretch" />
            <Button Margin="10,0,0,0"
                    Padding="5"
                    Content="Abreise"
                    Command="{Binding CommandCheckout}" Width="Auto" HorizontalAlignment="Stretch" />
        </UniformGrid>

    </Grid>
</Window>