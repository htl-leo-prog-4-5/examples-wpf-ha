<Window x:Class="WpfApp.Views.CheckinBookingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp.Views"
        mc:Ignorable="d"
        Title="CheckinBookingWindow" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Margin="5" Grid.Row="0" Grid.ColumnSpan="2" FontSize="24"
                   Text="{Binding Room.RoomNumber, StringFormat='Checkin Zimmer {0}'}">
        </TextBlock>
        <TextBlock Margin="5" Grid.Row="1" Grid.Column="0">Zimmertyp:</TextBlock>
        <TextBlock Margin="5" Grid.Row="1" Grid.Column="1" Text="{Binding Path=Room.RoomType}" />
        <TextBlock Margin="5" Grid.Row="2" Grid.Column="0">Anreisedatum:</TextBlock>
        <TextBlock Margin="5" Grid.Row="2" Grid.Column="1" Text="{Binding Path=From, StringFormat='{}{0:dd.MM.yyyy}'}" />
        <TextBlock Margin="5" Grid.Row="3" Grid.Column="0">Gast:</TextBlock>
        <ComboBox Margin="5" Grid.Row="3" Grid.Column="1"
                  ItemsSource="{Binding Path=Customers}"
                  DisplayMemberPath="FullName"
                  SelectedItem="{Binding Path=SelectedCustomer}">
        </ComboBox>
        <UniformGrid Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2">
            <Button Margin="5" Padding="5"
                    Command="{Binding Path=CancelCommand}">
                Abbrechen
            </Button>
            <Button Margin="5" Padding="5"
                    Command="{Binding Path=SaveCommand}">
                Anreise speichern
            </Button>
        </UniformGrid>
    </Grid>
</Window>