<Window x:Class="WpfApp.Views.CheckoutBookingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Abreise" Height="260" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Margin="5" Grid.Row="0" Grid.ColumnSpan="2" FontSize="24"
                   Text="{Binding Booking.Room.RoomNumber, StringFormat='Checkout Zimmer {0}'}">
        </TextBlock>
        <TextBlock Margin="5" Grid.Row="1" Grid.Column="0">Zimmertyp:</TextBlock>
        <TextBlock Margin="5" Grid.Row="1" Grid.Column="1" Text="{Binding Booking.Room.RoomType}"></TextBlock>
        <TextBlock Margin="5" Grid.Row="2" Grid.Column="0">Kunde:</TextBlock>
        <TextBlock Margin="5" Grid.Row="2" Grid.Column="1" Text="{Binding Booking.Customer}"></TextBlock>
        <TextBlock Margin="5" Grid.Row="3" Grid.Column="0">Ankunft:</TextBlock>
        <TextBlock Margin="5" Grid.Row="3" Grid.Column="1"
                   Text="{Binding Booking.From, ConverterCulture='de-DE', StringFormat='{}{0:D}'}">
        </TextBlock>
        <TextBlock Margin="5" Grid.Row="4" Grid.Column="0">Abreise:</TextBlock>
        <DatePicker Margin="5" Grid.Row="4" Grid.Column="1" SelectedDate="{Binding BookedUntil}" />
        <!--<TextBlock Margin="5" Grid.Row="4" Grid.Column="1" Text="{Binding Booking.To, ConverterCulture='de-DE', StringFormat='{}{0:D}'}"></TextBlock>-->
        <TextBlock Margin="5" Grid.Row="5" Grid.Column="0">Aufenthaltsdauer:</TextBlock>
        <TextBlock Margin="5" Grid.Row="5" Grid.Column="1" Text="{Binding Path=OverNights}"></TextBlock>
        <!--<TextBlock Margin="5" Grid.Row="5" Grid.Column="1" Text="{Binding Path=Days, StringFormat='{}{0} Nächte'}"></TextBlock>-->
        <UniformGrid Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2">
            <Button Margin="5" Padding="5"
                    Command="{Binding CommandUndo}">
                Abbrechen
            </Button>
            <Button Margin="5" Padding="5"
                    Command="{Binding CommandSave}">
                Abreise speichern
            </Button>
        </UniformGrid>

    </Grid>
</Window>