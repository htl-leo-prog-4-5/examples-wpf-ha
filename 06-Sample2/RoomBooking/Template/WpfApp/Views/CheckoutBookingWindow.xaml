<Window x:Class="WpfApp.Views.CheckoutBookingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Abreise" Height="260" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Margin="5" Grid.Row="0" Grid.ColumnSpan="2" FontSize="24">Checkout</TextBlock>
        <TextBlock Margin="5" Grid.Row="1" Grid.Column="0">Zimmertyp:</TextBlock>
        <TextBlock Margin="5" Grid.Row="2" Grid.Column="0">Kunde:</TextBlock>
        <TextBlock Margin="5" Grid.Row="3" Grid.Column="0">Ankunft:</TextBlock>
        <TextBlock Margin="5" Grid.Row="4" Grid.Column="0">Abreise:</TextBlock>
        <TextBlock Margin="5" Grid.Row="5" Grid.Column="0">Aufenthaltsdauer:</TextBlock>
        <UniformGrid Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2">

        </UniformGrid>

    </Grid>
</Window>