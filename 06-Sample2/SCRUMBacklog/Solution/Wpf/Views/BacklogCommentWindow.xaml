<Window x:Class="Wpf.Views.BacklogCommentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf"
        xmlns:viewModels="clr-namespace:Wpf.ViewModels;assembly=Wpf.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewModels:BacklogCommentViewModel}"
        mc:Ignorable="d"
        Title="BacklogItem Comments" Height="350" Width="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10,10,10,10">
            <UniformGrid Columns="2">
                <Label Content="Name:" />
                <TextBlock Text="{Binding BacklogItem.Name}" />

                <Label Content="Description:" />
                <TextBlock Text="{Binding BacklogItem.Description}" />

                <Label Content="CreationDate:" />
                <TextBlock Text="{Binding BacklogItem.CreationDate}" />
            </UniformGrid>
        </StackPanel>

        <ListView Grid.Row="1" Margin="10,0,10,10"
                  ItemsSource="{Binding Comments}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="No" DisplayMemberBinding="{Binding No }" />
                    <GridViewColumn Header="Comment" DisplayMemberBinding="{Binding Description }" />
                </GridView>
            </ListView.View>
        </ListView>

        <UniformGrid Grid.Row="2" Columns="4" Margin="5">
            <Button Content="Close" Margin="5" Command="{Binding CloseCommand}" />
        </UniformGrid>
    </Grid>
</Window>