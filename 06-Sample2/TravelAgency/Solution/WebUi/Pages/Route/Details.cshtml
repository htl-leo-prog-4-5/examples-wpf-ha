@page
@model WebUi.Pages.Route.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Route</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Route.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Route.Name)
        </dd>
    </dl>
</div>

<table class="table">
    <thead>
    <tr>
        <th>
            No
        </th>
        <th>
            Type
        </th>
        <th>
            Info
        </th>
        <th>
            Description
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Route!.Steps!)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.No)
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.TypeInfo
            </td>
            <td>
                @item.TypeInfoName
            </td>
        </tr>
    }
    </tbody>
</table>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Route.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>