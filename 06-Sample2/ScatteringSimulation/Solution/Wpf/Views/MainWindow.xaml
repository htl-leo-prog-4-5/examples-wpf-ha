<Window x:Class="Wpf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf"
        xmlns:viewModels="clr-namespace:Wpf.ViewModels;assembly=Wpf.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewModels:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="Scattering Simulation" Height="460" Width="620">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Margin="10,10,10,10" Grid.Row="0" Orientation="Horizontal">
            <Label Content="Category:" />
            <ComboBox Width="150" Margin="5" ItemsSource="{Binding FilterCategories}" DisplayMemberPath="Description"
                      SelectedValue="{Binding SelectedFilterCategory}" />

            <Button Content="Filter" Width="60" Margin="10,0,0,0" Command="{Binding FilterCommand}" />
        </StackPanel>

        <ListView Grid.Row="1" Margin="10,10,10,10"
                  ItemsSource="{Binding FilteredSimulations}" SelectedItem="{Binding SelectedSimulation}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="CreationDate" DisplayMemberBinding="{Binding CreationDate}" />
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Category" DisplayMemberBinding="{Binding Category}" />
                    <GridViewColumn Header="Origin" DisplayMemberBinding="{Binding Origin}" />
                    <GridViewColumn Header="Samples" DisplayMemberBinding="{Binding SampleCount}" />
                </GridView>
            </ListView.View>
        </ListView>

        <UniformGrid Grid.Row="2" Columns="2" Margin="20,10,0,10">

            <Label Content="Origin:" />
            <ComboBox Width="150" Margin="5" ItemsSource="{Binding Origins}" DisplayMemberPath="Name"
                      SelectedValue="{Binding SelectedOrigin}" IsEnabled="{Binding IsEditMode}" />

            <Label Content="Category:" />
            <ComboBox Width="150" Margin="5" ItemsSource="{Binding Categories}" DisplayMemberPath="Description"
                      SelectedValue="{Binding SelectedCategory}" IsEnabled="{Binding IsEditMode}" />

        </UniformGrid>

        <UniformGrid Grid.Row="3" Columns="4" Margin="5">
            <Button Content="Details" Margin="5" Command="{Binding DetailCommand}" />
            <Button Content="Edit" Margin="5" Command="{Binding EditCommand}" />
            <Button Content="Update" Margin="5" Command="{Binding UpdateCommand}" />
            <Button Content="Import" Margin="5" Command="{Binding ImportCommand}" />
        </UniformGrid>

        <StackPanel Grid.Row="4" Margin="5" Orientation="Horizontal">
            <Label Content="Filename:" />
            <TextBox Margin="5" MinWidth="80" Text="{Binding FileName, UpdateSourceTrigger=PropertyChanged}" />
            <Label Content="Extension:" />
            <TextBox Margin="5" MinWidth="30" Text="{Binding Extension, UpdateSourceTrigger=PropertyChanged}" />
            <Label Content="{Binding CalcFileName}" />
        </StackPanel>
    </Grid>
</Window>