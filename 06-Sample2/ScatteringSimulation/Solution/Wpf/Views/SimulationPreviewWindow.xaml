<Window x:Class="Wpf.Views.SimulationPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf"
        xmlns:viewModels="clr-namespace:Wpf.ViewModels;assembly=Wpf.ViewModels"
        xmlns:controls="clr-namespace:Wpf.Controls"
        d:DataContext="{d:DesignInstance Type=viewModels:SimulationPreviewViewModel}"
        mc:Ignorable="d"
        Title="Simulation Preview" Height="350" Width="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10,10,10,10">
            <UniformGrid Columns="2">
                <Label Content="Name:" />
                <TextBlock Text="{Binding Simulation.Name}" />

                <Label Content="Description:" />
                <TextBlock Text="{Binding Simulation.Description}" />

                <Label Content="CreationDate:" />
                <TextBlock Text="{Binding Simulation.CreationDate}" />
            </UniformGrid>
        </StackPanel>

        <controls:SimulationPreviewControl Grid.Row="1" Margin="10,0,10,10" BorderThickness="1" BorderBrush="Black"
                                           Samples="{Binding Samples}">
        </controls:SimulationPreviewControl>

        <UniformGrid Grid.Row="2" Columns="4" Margin="5">
            <Button Content="Close" Margin="5" Command="{Binding CloseCommand}" />
        </UniformGrid>
    </Grid>
</Window>