<Window x:Class="ValidationDemo3.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:ValidationDemo3.ViewModels"
        Title="MainWindow" Height="350" Width="525">

    <Window.DataContext>
        <viewModels:MainWindowViewModel />
    </Window.DataContext>

    <Window.Resources>
        <Style TargetType="TextBox">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="ToolTip"
                            Value="{ Binding RelativeSource={x:Static RelativeSource.Self},
                            Path=( Validation.Errors)[0]. ErrorContent}" />

                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <StackPanel>
        <Label Content="Notenschnitt" FontSize="20" />

        <Grid Margin="5,5,5,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label Content="Int-Value1" Grid.Row="0" Grid.Column="0"></Label>
            <TextBox
                Text="{Binding SomeData.IntValue1, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                Grid.Row="0" Grid.Column="1">
            </TextBox>

            <Label Content="Int-Value2" Grid.Row="1" Grid.Column="0"></Label>
            <TextBox
                Text="{Binding SomeData.IntValue2, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                Grid.Row="1" Grid.Column="1">
            </TextBox>

            <Label Content="Int-Value3" Grid.Row="2" Grid.Column="0"></Label>
            <TextBox
                Text="{Binding SomeData.IntValue3, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                Grid.Row="2" Grid.Column="1">
            </TextBox>

            <Label Content="Str-Value1" Grid.Row="3" Grid.Column="0"></Label>
            <TextBox
                Text="{Binding SomeData.StrValue1, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                Grid.Row="3" Grid.Column="1">
            </TextBox>

        </Grid>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0">
            <Button Content="Done" Command="{Binding DoneCommand}" Width="50" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0">
            <Label Content="Filename"></Label>
            <TextBox Text="{Binding FileName, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                     IsReadOnly="True">
            </TextBox>
            <Button Content="?"></Button>
        </StackPanel>
    </StackPanel>
</Window>