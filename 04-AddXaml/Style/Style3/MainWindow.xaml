<Window x:Class="Style3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:style3="clr-namespace:Style3"
        Title="MainWindow" Height="350" Width="525">

    <Window.DataContext>
        <style3:MainWindowViewModel />
    </Window.DataContext>

    <Window.Resources>

        <Style TargetType="Label">
            <Setter Property="FontSize" Value="28"></Setter>
            <Setter Property="Foreground" Value="Black"></Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsCurrentValuePrim}" Value="true">
                    <Setter Property="Foreground" Value="Green"></Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding CurrentValue}" Value="2">
                    <Setter Property="Foreground" Value="Red"></Setter>
                </DataTrigger>

            </Style.Triggers>
        </Style>

    </Window.Resources>

    <StackPanel>
        <Label Content="{Binding CurrentValue}" />
        <Button Content="Increment" Command="{Binding IncrementCommand}" />
    </StackPanel>
</Window>