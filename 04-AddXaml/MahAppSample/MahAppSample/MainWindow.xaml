<controls:MetroWindow x:Class="MahAppSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MahAppSample"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel >
        <Label Content="Lotto Quick Tip" FontSize="30"></Label>
        <Separator Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal">
            <Label Content="Filename" Width="100"></Label>
            <TextBox Text="{Binding Filename}" Width="400"></TextBox>
            <Button Content="?"></Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="" Width="100"></Label>
            <CheckBox Content="Replace" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Range" Width="100"></Label>
            <TextBox Text="45" Width="100"></TextBox>
        </StackPanel>
        <Separator Margin="0,10,0,10"/>
        <StackPanel Orientation="Horizontal">
            <Button Content="Tip"  Width="100" Margin="0,0,10,0"/>
            <Button Content="Write tip to file"   Width="100" Margin="0,0,10,0"/>
            <Button Content="Close" Width="100" Margin="180,0,0,0"/>
        </StackPanel>
        <Separator Margin="0,10,0,10"/>
        <StackPanel Orientation="Horizontal">
            <Label Content="Tip" Width="100"/>
            <TextBox Text="1" Width="20" IsReadOnly="True" Margin="0,0,5,0"/>
            <TextBox Text="2" Width="20" IsReadOnly="True" Margin="0,0,5,0"/>
            <TextBox Text="3" Width="20" IsReadOnly="True" Margin="0,0,5,0"/>
            <TextBox Text="4" Width="20" IsReadOnly="True" Margin="0,0,5,0"/>
            <TextBox Text="5" Width="20" IsReadOnly="True" Margin="0,0,5,0"/>
            <TextBox Text="6" Width="20" IsReadOnly="True" Margin="0,0,5,0"/>
        </StackPanel>
    </StackPanel>
</controls:MetroWindow>
