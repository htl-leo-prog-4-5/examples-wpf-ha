<Window x:Class="FindInFileAsync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FindInFileAsync"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    <StackPanel>
        <Label>Find in File Async</Label>
        <StackPanel Orientation="Horizontal">
            <Label Content="Text" Width="100" />
            <TextBox Text="{Binding SearchText}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="File" Width="100" />
            <TextBox Text="{Binding FileName}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Content="Search" Command="{Binding StartSearchCommand}" Height="25" Width="300"/>
            <Button Content="Stop Search" Command="{Binding StopSearchCommand}" Height="25"/>
        </StackPanel>

        <TextBox  Text="{Binding ResultText}"/>

    </StackPanel>
</Window>
