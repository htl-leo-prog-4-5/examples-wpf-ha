<Window x:Class="RechenTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:RechenTest"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <vm:Calculate />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="30"></RowDefinition>
            <RowDefinition Height="Auto" MinHeight="30"></RowDefinition>
            <RowDefinition Height="Auto" MinHeight="30"></RowDefinition>
            <RowDefinition Height="Auto" MinHeight="30"></RowDefinition>
            <RowDefinition Height="Auto" MinHeight="30"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition Width="50"></ColumnDefinition>
            <ColumnDefinition Width="100*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Button Content="+" IsEnabled = "{Binding Path=IsNotPlus}"     Click="Button_Click_Plus" />
        <Button Content="-" IsEnabled = "{Binding Path=IsNotMinus}"    Click="Button_Click_Minus" Grid.Row="1" />
        <Button Content="*" IsEnabled = "{Binding Path=IsNotMul}"      Click="Button_Click_Mul" Grid.Row="2" />
        <Button Content="/" IsEnabled = "{Binding Path=IsNotDiv}"      Click="Button_Click_Div" Grid.Row="3" />
        <Label Content="Op1" Grid.Column="1"  />
        <Label Content="Op1" Grid.Column="1"   Grid.Row="1"/>
        <Label Content="Result" Grid.Column="1"  Grid.Row="2"/>
        <TextBox Text="{Binding Path=Val1, UpdateSourceTrigger=PropertyChanged }" Grid.Column="2" />
        <TextBox Text="{Binding Path=Val2, UpdateSourceTrigger=PropertyChanged}" Grid.Column="2" Grid.Row="1"/>
        <TextBox Text="{Binding Path=Result, Mode=OneWay}" Grid.Column="2" Grid.Row="2" />
    </Grid>
</Window>
