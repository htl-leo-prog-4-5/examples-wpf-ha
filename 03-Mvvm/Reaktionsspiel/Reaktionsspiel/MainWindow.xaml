<Window x:Class="Reaktionsspiel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reaktionsspiel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:Game x:Key="AGame" 
        />
    </Window.Resources>

    <StackPanel DataContext="{StaticResource AGame}">
        <Label Content="Reaktionsspiel" FontSize="20"/>
        <Separator Margin="0,0,0,10"/>
        <UniformGrid Columns="2" Rows="2">
            <Button Grid.Column="1" Grid.Row="1" FontSize="20" Content="{Binding Next1}" Click="Button1_Click" />
            <Button Grid.Column="2" Grid.Row="1" FontSize="20" Content="{Binding Next2}" Click="Button2_Click"/>
            <Button Grid.Column="1" Grid.Row="2" FontSize="20" Content="{Binding Next3}" Click="Button3_Click"/>
            <Button Grid.Column="2" Grid.Row="2" FontSize="20" Content="{Binding Next4}" Click="Button4_Click"/>
        </UniformGrid>
        <Separator Margin="0,10,0,2" />
        <StackPanel Orientation="Horizontal">
            <Label Content="Count" MinWidth="80"/>
            <Label Content="{Binding MoveCount}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Error" MinWidth="80"/>
            <Label Content="{Binding Errors}" />
        </StackPanel>
        <Button Content="NewGame" Command="{Binding NewGameCommand}"/>
    </StackPanel>
</Window>
